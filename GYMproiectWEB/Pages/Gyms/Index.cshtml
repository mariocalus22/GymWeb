@page "/"
@model GYMproiectWEB.Pages.Gyms.IndexModel

@{
    ViewData["Title"] = "";
}

<h1>GYM Customers</h1>

<p>
    <a asp-page="Create">New customer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Gym[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gym[0].Coach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gym[0].Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gym[0].StartingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Gym)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Coach)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartingDate)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
